{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2",
  "basePath": "https://canvas.instructure.com/api",
  "resourcePath": "/polls",
  "produces": [
    "application/json"
  ],
  "apis": [
    {
      "path": "/v1/courses/{course_id}/polls",
      "description": "Returns the list of polls in this course.",
      "operations": [
        {
          "method": "GET",
          "summary": "List polls in a course",
          "notes": "Returns the list of polls in this course.",
          "nickname": "list_polls_in_course",
          "parameters": [
            {
              "paramType": "path",
              "name": "course_id",
              "description": "ID",
              "type": "string",
              "format": null,
              "required": true
            }
          ],
          "type": "array",
          "items": {
            "$ref": "Poll"
          }
        }
      ]
    },
    {
      "path": "/v1/courses/{course_id}/polls/{id}",
      "description": "Returns the poll with the given id",
      "operations": [
        {
          "method": "GET",
          "summary": "Get a single poll",
          "notes": "Returns the poll with the given id",
          "nickname": "get_single_poll",
          "parameters": [
            {
              "paramType": "path",
              "name": "course_id",
              "description": "ID",
              "type": "string",
              "format": null,
              "required": true
            },
            {
              "paramType": "path",
              "name": "id",
              "description": "The poll unique identifier.",
              "type": "integer",
              "format": "int64",
              "required": true
            }
          ],
          "type": "Poll"
        }
      ]
    },
    {
      "path": "/v1/courses/{course_id}/polls",
      "description": "Create a new poll for this course",
      "operations": [
        {
          "method": "POST",
          "summary": "Create a single poll",
          "notes": "Create a new poll for this course",
          "nickname": "create_single_poll",
          "parameters": [
            {
              "paramType": "path",
              "name": "course_id",
              "description": "ID",
              "type": "string",
              "format": null,
              "required": true
            },
            {
              "paramType": "form",
              "name": "poll[title]",
              "description": "The title of the poll.",
              "type": "string",
              "format": null,
              "required": true
            },
            {
              "paramType": "form",
              "name": "poll[description]",
              "description": "A brief description or instructions for the poll.",
              "type": "string",
              "format": null,
              "required": false
            }
          ],
          "type": "Poll"
        }
      ]
    },
    {
      "path": "/v1/courses/{course_id}/polls/{id}",
      "description": "Update an existing poll for this course",
      "operations": [
        {
          "method": "PUT",
          "summary": "Update a single poll",
          "notes": "Update an existing poll for this course",
          "nickname": "update_single_poll",
          "parameters": [
            {
              "paramType": "path",
              "name": "course_id",
              "description": "ID",
              "type": "string",
              "format": null,
              "required": true
            },
            {
              "paramType": "path",
              "name": "id",
              "description": "ID",
              "type": "string",
              "format": null,
              "required": true
            },
            {
              "paramType": "form",
              "name": "poll[title]",
              "description": "The title of the poll.",
              "type": "string",
              "format": null,
              "required": true
            },
            {
              "paramType": "form",
              "name": "poll[description]",
              "description": "A brief description or instructions for the poll.",
              "type": "string",
              "format": null,
              "required": false
            }
          ],
          "type": "Poll"
        }
      ]
    },
    {
      "path": "/v1/courses/{course_id}/polls/{id}",
      "description": "<b>204 No Content<b> response code is returned if the deletion was successful.",
      "operations": [
        {
          "method": "DELETE",
          "summary": "Delete a poll",
          "notes": "<b>204 No Content<b> response code is returned if the deletion was successful.",
          "nickname": "delete_poll",
          "parameters": [
            {
              "paramType": "path",
              "name": "course_id",
              "description": "ID",
              "type": "string",
              "format": null,
              "required": true
            },
            {
              "paramType": "path",
              "name": "id",
              "description": "The poll's unique identifier",
              "type": "integer",
              "format": "int64",
              "required": true
            }
          ],
          "type": "void"
        }
      ]
    }
  ],
  "models": {
    "Poll": {
      "id": "Poll",
      "description": "",
      "required": [
        "id",
        "course",
        "title"
      ],
      "properties": {
        "id": {
          "description": "The unique identifier for the poll.",
          "example": 1023,
          "type": "integer"
        },
        "course": {
          "description": "The course the poll belongs to.  See the Courses API for details.",
          "$ref": "Course"
        },
        "title": {
          "description": "The title of the poll.",
          "type": "string",
          "example": "A Sample Poll"
        },
        "description": {
          "description": "A short description of the poll.",
          "type": "string",
          "example": "This poll is to quickly determine what you've learned in the past hour."
        }
      }
    }
  }
}
